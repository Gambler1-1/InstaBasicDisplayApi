  <main>       
    <div class="mt"></div>
    <div class="container ">
      <% if (errorMessage) { %> 
        <div class= "alert alert-danger" role="alert"><%= errorMessage %></div>
      <% } %>
        <h1> SIGNUP</h1>
      <form action="/auth/post-signup" method="POST">

        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" class="form-control" id="name" value="<%= oldInput.name %>" required >
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input ype="text" name="email" id="email"  class="form-control" value="<%= oldInput.email %>" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="text" name="password" class="form-control" id="password" value="<%= oldInput.password %>" required>
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="text" name="confirmPassword" class="form-control" id="confirmPassword" value="<%= oldInput.confirmPassword %>" required>
          </div>
          <div class="mb-3">
            <label for="phoneNum" class="form-label">Phone Number</label>
            <input type="number" name="phoneNum" class="form-control" id="phoneNum" value="<%= oldInput.phoneNum %>"   required>
          </div>
          
       
        <button type="submit"  class="btn btn-primary">Sign up</button>
      </form>
    </div>
    <div class="mb"></div>
