                    d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg></a>
            </li>
            <% if (!isAuthenticated) { %>
            <li class="nav-item">
              <a class="nav-link" href="auth/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="auth/signup">Signup</a>
            </li>
          
            
            <% } %>
          </ul>
          
          

          <% if (isAuthenticated) { %>
           

          <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <%= name %>

            </a>
           
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Action</a></li>
              <li><a class="dropdown-item" href="#">Another action</a></li>
              <li>
                <hr class="dropdown-divider">
              </li>
              <li><a class="dropdown-item" href="/auth/logout">Logout</a></li>
            </ul>
          </div>
                      <% } %>

          
          
        </div>
      </div>
    </nav>
  </header>

  
  <main>
    <div class="container">
    <form class="d-flex" role="search">
      <input class="form-control me-2" type="search" name="name" placeholder="Search Product" aria-label="Search">
      <button class="btn btn-outline-success" href="/name" type="submit">Search</button>
    </form>
    </div>
    <% if (prods.length > 0) { %>
      <div class="container-xxl">
        <div class="row">
          <% for (let product of prods) { %>
          <div class="col">
  
<style>
   
 /* .header{
  position: sticky;
  top: 0;
  overflow:visible;
 }  */


  .card:hover {
  transform: scale(1.1); 
}
.card-img-top {
    width: 15rem; /* You can set the dimensions to whatever you want */
    height: 15rem;
    object-fit: cover;
}
.card-title-price {
   color: rgb(19, 226, 47);
   text-align: center;

   
}
.card-title{
  font-weight: bold;
text-align: center;
}
.card-body{
  text-align: center;
}
.my-link {
  opacity: 0;
  overflow: hidden;
  height: 0;
  width: 0;
  display: block;
}


</style>
      
        <div class="card" style="width: 15rem; margin-top: 20px; ">
          <img src="<%= product.imageUrl %>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">
              <%= product.name %>
            </h5>
            <h5 class="card-title-price">
               $ <%= product.price %>
            </h5>
            <!-- <p class="card-text">
              <%= product.description %>
            </p> -->
            <a href="/product/<%= product.id %>" class="btn btn-success">Buy Now</a>
                        <a href="/addToCart/<%= product.id %>" class="btn btn-primary">Add to Cart</a>


          </div>
        </div>
      
    
    
  </div>
  <% } %>
</div>
    </div>
    <% } else { %>
      <h1>No Products Found!</h1>
  <% } %>
    
       
</main>
